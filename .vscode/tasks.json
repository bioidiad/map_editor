{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${workspaceFolder}/*.c",
                "${workspaceFolder}/editor.h", 
                "${workspaceFolder}/libft/libft.a", 
                "${workspaceFolder}/libft/libft.h",
                "-lSDL2",
                "-o",
                "${fileDirname}/${doom}"                
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}